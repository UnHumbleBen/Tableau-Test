<%- include('./partials/header') %>
  <title>Find a Route</title>
</head>
<body>
  <%- include('./partials/navbar') %>
  <h1>Plan Your Trip</h1>
  <div class="container">
    <form action="/find" method="post" display="inline-block">
    <label for="start">Start:</label>
      <select name="start" id="start">
          <option value="">--Please choose an option--</option>
      <% Object.keys(mapProvinceToCoord).forEach(function(key) { %>
          <option value="<%= JSON.stringify(mapProvinceToCoord[key]) %>"><%= key %></option>
      <% }) %>
      </select>

    <label for="waypointA">Waypoint A:</label>
      <select name="waypointA" id="waypointA">
          <option value="">--Please choose an option--</option>
      <% Object.keys(mapProvinceToCoord).forEach(function(key) { %>
          <option value="<%= JSON.stringify(mapProvinceToCoord[key]) %>"><%= key %></option>
      <% }) %>
      </select>

    <label for="waypointB">Waypoint B:</label>
      <select name="waypointB" id="waypointB">
          <option value="">--Please choose an option--</option>
      <% Object.keys(mapProvinceToCoord).forEach(function(key) { %>
          <option value="<%= JSON.stringify(mapProvinceToCoord[key]) %>"><%= key %></option>
      <% }) %>
      </select>

    <label for="destination">Destination:</label>
      <select name="destination" id="destination">
          <option value="">--Please choose an option--</option>
      <% Object.keys(mapProvinceToCoord).forEach(function(key) { %>
          <option value="<%= JSON.stringify(mapProvinceToCoord[key]) %>"><%= key %></option>
      <% }) %>
      </select>

      <!-- <input type="text" name="start" id="start" placeholder="Start">
      <input type="text" name="waypointA" id="waypointA" placeholder="Waypoint A">
      <input type="text" name="waypointB" id="waypointA" placeholder="Waypoint B">
      <input type="text" name="destination" id="destination" placeholder="Destination"> -->
      <input type="submit" value="submit">
    </form> 
  </div>

  <% if (typeof alert !== 'undefined' && alert) { %> 
  <script>
    alert('Could not find start or destination! Please try again!');
  </script>
  <% } %>
  
</body>
</html>