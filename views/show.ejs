        // ];
        var flightPlanCoordinates = <%- JSON.stringify(path) %>;
        console.log(JSON.stringify(flightPlanCoordinates));
        var flightPath = new google.maps.Polyline({
          path: flightPlanCoordinates,
          geodesic: true,
          strokeColor: '#FF0000',
          strokeOpacity: 1.0,
          strokeWeight: 2
        });

        flightPath.setMap(map);
      }
    </script>
